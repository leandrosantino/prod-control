<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      outline: 0;
      box-sizing: border-box;
      font-family: Arial;
    }


    .container {
      width: 100%;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding-bottom: 100px;
      gap: 12px;
    }

    button {
      padding: 12px;
      text-align: center;
      border-radius: 4px;
      color: #fff;
      background-color: #0078d4;
      border: none;
      font-size: 20px;
    }

    button:hover {
      background-color: #0078d4d0;
      cursor: pointer;
    }

    button:active {
      background-color: #0078d4ec;
    }

  </style>
</head>

<body>

  <div class="container">

    <h3 id="msg"><%- msg %></h3>
    <button onclick="generate()">Gerar Relatorio</button>

  </div>

</body>

<script>

  async function generate() {
    try {
      const response = await fetch(`http://${window.location.host}/report/generate`)
      const { msg } = await response.json()
      document.querySelector('#msg').innerHTML = msg
    } catch {
      document.querySelector('#msg').innerHTML = 'Erro local!'
    }
  }

</script>

</html>
