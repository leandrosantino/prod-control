<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document Prod</title>

  <style>
    * {
    margin: 0;
    padding: 0;
    outline: 0;
    box-sizing: border-box;
    font-family: Arial;
    background-color: grey;
  }

  .container {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-bottom: 100px;
    gap: 12px;
  }

  button {

    padding: 12px;
    text-align: center;
    border-radius: 4px;
    color: #fff;
    background-color: #0078d4;
    border: none;
    font-size: 20px;
  }

  button:hover {
    background-color: #0078d4d0;
    cursor: pointer;
  }

  button:active {
    background-color: #0078d4ec;
  }

  input {
    padding: 4px;
    border-radius: 4px;
    background-color: white;
    color: black;
    font-size: 15px;
    border: solid 1px;
  }

  h1 {
    color: whitesmoke;
    font-size: 70px;
    text-align: center;
    justify-content: center;
  }

  h3{
    text-align: center;
    font-size: 35px;
    text-align: center;
    color: black;
    height: 100px;
    width: 100%;

  }

  h2{
    font-size: 18px;
    text-align: center;


  }
  </style>
  </head>

  <body>

    <div class="container">
      <h1>Adler Pelzer Group</h1>
      <h3>Relat√≥rio de Apontamento</h3>
      <h2 id="msg"><%- msg %></h2>
      <button onclick="generate()">Gerar Relatorio</button>
      <input id="data" type="date">

    </div>


  </body>


<script>

  async function generate() {
    document.querySelector('#msg').innerHTML = ""
    try {

      let data = document.querySelector("#data")
      console.log(data.value)

      if (data.value !== "") {

        data = data.value.split('-')
        data = data.map(entry => Number(entry))

        console.log('teste')
        const response = await fetch(`http://${window.location.host}/report/generate?day=${data[2]}&month=${data[1]}&year=${data[0]}`)
        const { msg } = await response.json()
        document.querySelector('#msg').innerHTML = msg

        return
      }
      document.querySelector('#msg').innerHTML = 'Preencha o campo data para continuar!'

    } catch {
      document.querySelector('#msg').innerHTML = 'Erro local!'
    }
  }
</script>

</html>
